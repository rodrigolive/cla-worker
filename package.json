{
    "name": "cla-worker",
    "version": "1.0.1",
    "description": "Clarive Worker",
    "main": "src/cli.js",
    "scripts": {
        "test": "jest",
        "build": "rimraf ./dist && tsc && cp -R package.json bin ./dist/ && find src -name '*.js' -exec cp {} dist/{} \\; && cd ./dist && pkg bin/cla-worker -t node12-win-x64,node12-linux-x64,node12-macos-x64 -c package.json && cd .. && find ./dist/ -name '*.j*' -exec rm {} \\;",
        "package": "npm run build && cd dist && mkdir cla-worker && mv cla-worker-* cla-worker && tar cvzf cla-worker-latest.tgz cla-worker && zip -r cla-worker.zip cla-worker",
        "build-watch": "tsc -w",
        "test-watch": "npx jest --watchAll",
        "docs": "gitbook build docs ../cla-worker-docs",
        "pretty": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
        "lint": "eslint 'src/**'"
    },
    "bin": "bin/cla-worker",
    "engines": {
        "node": ">=11"
    },
    "pkg": {
        "assets": [
            "./src/**"
        ],
        "targets": [
            "node11"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/clarive/claw.git"
    },
    "keywords": [
        "Clarive",
        "agent",
        "worker"
    ],
    "author": "Clarive, Inc.",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/clarive/claw/issues"
    },
    "homepage": "https://github.com/clarive/claw#readme",
    "dependencies": {
        "axios": "^0.19.0",
        "colors": "^1.2.1",
        "daemonize-process": "^1.0.9",
        "eventsource": "^1.0.7",
        "js-yaml": "^3.13.1",
        "module-alias": "^2.2.0",
        "shortid": "^2.2.14",
        "tslib": "^1.10.0",
        "yargs": "^13.2.4"
    },
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/node": "^12.0.12",
        "@types/yargs": "^13.0.0",
        "@typescript-eslint/eslint-plugin": "^2.1.0",
        "@typescript-eslint/parser": "^2.1.0",
        "eslint": "^6.3.0",
        "http-debug": "^0.1.2",
        "jest": "^24.8.0",
        "pkg": "^4.4.0",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "tslint": "^5.19.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-eslint-rules": "^5.4.0",
        "typedoc": "^0.15.0",
        "typescript": "^3.6.2"
    }
}
