{
    "version": "0.1",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["esnext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "src",
        "rootDir": ".",
        "rootDirs": ["src", "bin"],
        "paths": {
            "@claw/*": ["*"],
            "@claw-test/*": ["../tests/*"],
            "@root/*": ["../*"]
        },
        "experimentalDecorators": true,
        "removeComments": true
    }
}
